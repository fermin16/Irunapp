<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mapboxYellowFaint">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagen_principal"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/degradado_tarjeta"
                android:transitionName="@string/id_transicion_imagen"/>
            <View android:id="@+id/imagen_divider_info"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/dividerVertical" />

            <TextView
                android:id="@+id/nombre_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="50sp"
                android:textStyle="bold"
                android:transitionName="@string/id_transicion_nombre"/>

            <View android:id="@+id/tile_divider_info"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/dividerVertical" />

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="20sp" />

            <View android:id="@+id/descripcion_divider_info"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/dividerVertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imagen_ubicacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_location_on_black_24dp" />
                        <TextView
                            android:id="@+id/texto_direccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/direccion"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <View android:id="@+id/direccion_divider_info"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerVertical" />
                    <TextView
                        android:id="@+id/direccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:textSize="15sp" />
                    <View android:id="@+id/direccion_divider_info_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerVertical" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imagen_horario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_access_time_black_24dp" />
                        <TextView
                            android:id="@+id/texto_horario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/horario"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <View android:id="@+id/horario_divider_info"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerVertical" />
                    <TextView
                        android:paddingLeft="24dp"
                        android:id="@+id/horario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp" />
                    <View android:id="@+id/horario_divider_info_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerVertical" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imagen_precio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_attach_money_black_24dp" />
                        <TextView
                            android:id="@+id/texto_precio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/precio"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <View android:id="@+id/precio_divider_info"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerVertical" />
                    <TextView
                        android:id="@+id/precio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:textSize="15sp" />
                    <View android:id="@+id/precio_divider_info_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerVertical" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imagen_contacto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_phone_black_24dp" />
                        <TextView
                            android:id="@+id/texto_contacto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/contacto"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <View android:id="@+id/contacto_divider_info"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerVertical" />
                    <TextView
                        android:id="@+id/contacto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:textSize="15sp" />
                    <View android:id="@+id/contacto_divider_info2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerVertical" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imagen_web"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_link_black_24dp" />
                        <TextView
                            android:id="@+id/texto_web"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pagina_web"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <View android:id="@+id/web_divider_info"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerVertical" />
                    <TextView
                        android:id="@+id/web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:textSize="15sp" />
                    <View android:id="@+id/web_divider_info_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerVertical" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/boton_verMenos"
                    android:text="@string/ver_menos"
                    android:layout_marginStart="50dp"
                    app:icon="@drawable/ver_menos_boton"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:transitionName="@string/id_transicion_boton_mas"/>
                <Button
                    android:id="@+id/boton_ruta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    app:icon="@drawable/iconoir"
                    android:text="@string/RUTA"
                    android:theme="@style/Widget.MaterialComponents.Button.Icon"
                    android:transitionName="@string/id_transicion_boton_ruta"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>